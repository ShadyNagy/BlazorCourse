@page "/counter"

<h1>Counter</h1>

<p>Current count: @currentCount  @currentCount</p>

<input @bind="currentCount" @oninput="UpdateInput"/>
<input @bind="currentCount" @oninput="(e) => { UpdateInput(e); }"/>
<input @bind="currentCount" @oninput="(e) => { UpdateInputByValue((string) e.Value); }"/>
<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>

@code {
    private string currentCount = "0";

    private void UpdateInput(ChangeEventArgs e)
    {
        currentCount = (string)e.Value;
    }

    private void UpdateInputByValue(string val)
    {
        currentCount = val;
    }

    private void IncrementCount()
    {
        currentCount = (int.Parse(currentCount) + 1).ToString();
    }
}
